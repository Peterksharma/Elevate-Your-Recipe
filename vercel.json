{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/styles.css",
      "dest": "server.js"
    },
    {
      "src": "/app.js",
      "dest": "server.js"
    },
    {
      "src": "/recipeAdjuster.js",
      "dest": "server.js"
    },
    {
      "src": "/recipeExtractor.js",
      "dest": "server.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
} 